@model ERP.Models.Veri.Rota.BSMGRNNMROTHEAD

@{
    ViewData["Title"] = "Rota Silme";
}

<h1 class="text-danger text-center mb-4">Rota Silme</h1>
<h5 class="text-center mb-4">Silmek İstediğinize Emin Misiniz?</h5>

<div class="card shadow-lg mb-4">
    <div class="card-header bg-danger text-white">
        <h5>Rota Bilgileri</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4 fw-bold text-secondary">Geçerlilik Başlangıç:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ROTDOCFROM)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Geçerlilik Bitiş:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ROTDOCUNTIL)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Çizim Numarası:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DRAWNUM)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Operasyon Numarası:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.OPRNUM)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Kurulum Süresi:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.SETUPTIME)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Makine Süresi:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MACHINETIME)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">İşçilik Süresi:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.LABOURTIME)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">İçerik No:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CONTENTNUM)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Bileşen Kodu:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.COMPONENT)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Miktar:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.QUANTITY)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Firma Kodu:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FCOMCODE.COMCODE)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Rota Tipi:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FROTDOCTYPE.DOCTYPE)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Malzeme Numarası:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MATDOCNUM)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Malzeme Tipi:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FMATDOCTYPE.DOCTYPE)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">İş Merkezi:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.WCMDOCNUM)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">BOM Tipi:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FBOMDOCTYPE.DOCTYPE)</dd>
        </dl>
    </div>
</div>

<!-- Butonlar -->
<div class="text-center mb-4">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ROTDOCNUM" />
        <button type="submit" class="btn btn-danger shadow-sm me-2">
            <i class="fas fa-trash-alt"></i> Sil
        </button>
        <a asp-action="Index" class="btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left"></i> Listeye Geri Dön
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Stil Tasarımları -->
<style>
    .card {
        border-radius: 15px;
        border: 1px solid #dee2e6;
    }

    .btn:hover {
        transform: scale(1.05);
        transition: 0.2s ease-in-out;
    }

    dt {
        font-weight: bold;
    }

    dd {
        padding-bottom: 10px;
        border-bottom: 1px solid #ddd;
    }

        dd:last-child {
            border-bottom: none;
        }

    h1 {
        font-size: 28px;
        font-weight: bold;
    }
</style>
