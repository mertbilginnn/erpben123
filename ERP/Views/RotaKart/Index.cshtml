@model IEnumerable<ERP.Models.Veri.Rota.BSMGRNNMROTHEAD>

@{
    ViewData["Title"] = "Rota Bilgileri";
}

<h1 class="text-primary text-center mb-4">Rota Bilgileri</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-success btn-lg shadow-sm" asp-action="Create">
        <i class="fas fa-plus-circle"></i> Yeni Rota Oluştur
    </a>
</div>

<table class="table table-striped table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Rota Numarası</th>
            <th>Geçerlilik Başlangıç</th>
            <th>Geçerlilik Bitiş</th>
            <th>Çizim Numarası</th>
            <th>Operasyon Numarası</th>
            <th>Kurulum Süresi</th>
            <th>Makine Süresi</th>
            <th>İşçilik Süresi</th>
            <th>İçerik No</th>
            <th>Bileşen Kodu</th>
            <th>Miktar</th>
            <th>Firma Kodu</th>
            <th>Rota Tipi</th>
            <th>Malzeme Numarası</th>
            <th>Malzeme Tipi</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ROTDOCNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.ROTDOCFROM)</td>
                <td>@Html.DisplayFor(modelItem => item.ROTDOCUNTIL)</td>
                <td>@Html.DisplayFor(modelItem => item.DRAWNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.OPRNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.SETUPTIME)</td>
                <td>@Html.DisplayFor(modelItem => item.MACHINETIME)</td>
                <td>@Html.DisplayFor(modelItem => item.LABOURTIME)</td>
                <td>@Html.DisplayFor(modelItem => item.CONTENTNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.COMPONENT)</td>
                <td>@Html.DisplayFor(modelItem => item.QUANTITY)</td>
                <td>@Html.DisplayFor(modelItem => item.FCOMCODE.COMCODE)</td>
                <td>@Html.DisplayFor(modelItem => item.FROTDOCTYPE.DOCTYPE)</td>
                <td>@Html.DisplayFor(modelItem => item.MATDOCNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.FMATDOCTYPE.DOCTYPE)</td>
                <td class="text-center">
                    <a class="btn btn-primary btn-sm mx-1 shadow-sm" asp-action="Edit" asp-route-id="@item.ROTDOCNUM">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a class="btn btn-warning btn-sm mx-1 shadow-sm" asp-action="Details" asp-route-id="@item.ROTDOCNUM">
                        <i class="fas fa-info-circle"></i> Detay
                    </a>
                    <a class="btn btn-danger btn-sm mx-1 shadow-sm" asp-action="Delete" asp-route-id="@item.ROTDOCNUM">
                        <i class="fas fa-trash-alt"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        transition: background-color 0.3s ease;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
