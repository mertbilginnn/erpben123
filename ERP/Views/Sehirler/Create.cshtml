@model ERP.Models.Kontrol.Genel.BSMGRNNMGEN004

@{
    ViewData["Title"] = "Yeni Şehir Oluştur";
}

<h1 class="text-primary text-center mb-4">Yeni Şehir Oluştur</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6 shadow-lg p-4 rounded bg-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="CITYCODE" class="form-label">Şehir Kodu</label>
                <input asp-for="CITYCODE" class="form-control" placeholder="Şehir Kodunu Girin" />
                <span asp-validation-for="CITYCODE" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CITYTEXT" class="form-label">Şehir İsmi</label>
                <input asp-for="CITYTEXT" class="form-control" placeholder="Şehir İsmini Girin" />
                <span asp-validation-for="CITYTEXT" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="COUNTRYCODE" class="form-label">Ülke Kodu</label>
                <select asp-for="COUNTRYCODE" class="form-select" asp-items="ViewBag.COUNTRYCODE"></select>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-success btn-lg shadow-sm">
                    <i class="fas fa-save"></i> Oluştur
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    input:focus, select:focus {
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        transition: box-shadow 0.3s ease-in-out;
    }

    button:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease-in-out;
    }
</style>
