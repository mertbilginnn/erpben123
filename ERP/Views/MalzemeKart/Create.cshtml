@model ERP.Models.Veri.Malzeme.BSMGRNNMMATHEAD

@{
    ViewData["Title"] = "Yeni Malzeme Kartı Oluştur";
}

<h1 class="text-primary text-center mb-4">Yeni Malzeme Kartı Oluştur</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-8 shadow-lg p-4 rounded bg-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="COMCODE" class="form-label">Firma Kodu</label>
                <select asp-for="COMCODE" class="form-select" asp-items="ViewBag.COMCODE"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MATDOCNUM" class="form-label">Malzeme Kodu</label>
                <input asp-for="MATDOCNUM" class="form-control" />
                <span asp-validation-for="MATDOCNUM" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MATDOCTYPE" class="form-label">Malzeme Tipi</label>
                <select asp-for="MATDOCTYPE" class="form-select" asp-items="ViewBag.MATDOCTYPE"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MATDOCFROM" class="form-label">Geçerlilik Başlangıç</label>
                <input asp-for="MATDOCFROM" class="form-control" />
                <span asp-validation-for="MATDOCFROM" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MATDOCUNTIL" class="form-label">Geçerlilik Bitiş</label>
                <input asp-for="MATDOCUNTIL" class="form-control" />
                <span asp-validation-for="MATDOCUNTIL" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SUPPLYTYPE" class="form-label">Tedarik Tipi</label>
                <input asp-for="SUPPLYTYPE" class="form-control" />
                <span asp-validation-for="SUPPLYTYPE" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="STUNIT" class="form-label">Malzeme Stok Birimi</label>
                <select asp-for="STUNIT" class="form-select" asp-items="ViewBag.STUNIT"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NETWEIGHT" class="form-label">Net Ağırlığı</label>
                <input asp-for="NETWEIGHT" class="form-control" />
                <span asp-validation-for="NETWEIGHT" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NWUNIT" class="form-label">Net Ağırlık Birimi</label>
                <select asp-for="NWUNIT" class="form-select" asp-items="ViewBag.NWUNIT"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BRUTWEIGHT" class="form-label">Brüt Ağırlık</label>
                <input asp-for="BRUTWEIGHT" class="form-control" />
                <span asp-validation-for="BRUTWEIGHT" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BWUNIT" class="form-label">Brüt Ağırlık Birimi</label>
                <select asp-for="BWUNIT" class="form-select" asp-items="ViewBag.BWUNIT"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ISBOM" class="form-label">Ürün Ağacı Var mı?</label>
                <input asp-for="ISBOM" class="form-control" />
                <span asp-validation-for="ISBOM" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BOMDOCNUM" class="form-label">Ürün Ağacı Kodu</label>
                <input asp-for="BOMDOCNUM" class="form-control" />
                <span asp-validation-for="BOMDOCNUM" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BOMDOCTYPE" class="form-label">Ürün Ağacı Tipi</label>
                <select asp-for="BOMDOCTYPE" class="form-select" asp-items="ViewBag.BOMDOCTYPE"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ISROUTE" class="form-label">Rotası Var mı?</label>
                <input asp-for="ISROUTE" class="form-control" />
                <span asp-validation-for="ISROUTE" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ROTDOCTYPE" class="form-label">Rota Tipi</label>
                <select asp-for="ROTDOCTYPE" class="form-select" asp-items="ViewBag.ROTDOCTYPE"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ROTDOCNUM" class="form-label">Rota Numarası</label>
                <input asp-for="ROTDOCNUM" class="form-control" />
                <span asp-validation-for="ROTDOCNUM" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ISDELETED" class="form-label">Silindi mi?</label>
                <input asp-for="ISDELETED" class="form-control" />
                <span asp-validation-for="ISDELETED" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ISPASSIVE" class="form-label">Pasif mi?</label>
                <input asp-for="ISPASSIVE" class="form-control" />
                <span asp-validation-for="ISPASSIVE" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LANCODE" class="form-label">Dil Kodu</label>
                <select asp-for="LANCODE" class="form-select" asp-items="ViewBag.LANCODE"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MATSTEXT" class="form-label">Malzeme Kısa Açıklaması</label>
                <input asp-for="MATSTEXT" class="form-control" />
                <span asp-validation-for="MATSTEXT" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MATLTEXT" class="form-label">Malzeme Uzun Açıklaması</label>
                <input asp-for="MATLTEXT" class="form-control" />
                <span asp-validation-for="MATLTEXT" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg shadow-sm">
                    <i class="fas fa-save"></i> Oluştur
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    input:focus, select:focus {
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        transition: box-shadow 0.3s ease-in-out;
    }

    button:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease-in-out;
    }
</style>
