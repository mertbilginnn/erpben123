@model IEnumerable<ERP.Models.Veri.Malzeme.BSMGRNNMMATHEAD>

@{
    ViewData["Title"] = "Malzeme Kartları";
}

<h1 class="text-primary text-center mb-4">Malzeme Kartları</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-success btn-lg shadow-sm" asp-action="Create">
        <i class="fas fa-plus-circle"></i> Yeni Malzeme Kartı Oluştur
    </a>
</div>

<table class="table table-striped table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Firma Kodu</th>
            <th>Malzeme Kodu</th>
            <th>Malzeme Tipi</th>
            <th>Geçerlilik Başlangıç</th>
            <th>Malzeme Kısa Açıklaması</th>
            <th>Malzeme Uzun Açıklaması</th>
            <th>Dil Kodu</th>
            <th>Geçerlilik Bitiş</th>
            <th>Tedarik Tipi</th>
            <th>Ürün Ağacı Var mı?</th>
            <th>Rotası Var mı?</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.FCOMCODE?.COMCODE + "  " + item.FCOMCODE?.COMTEXT)</td> 
                <td>@Html.DisplayFor(modelItem => item.MATDOCNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.MATDOCTYPE)</td>
                <td>@Html.DisplayFor(modelItem => item.MATDOCFROM)</td>
                <td>@Html.DisplayFor(modelItem => item.MATSTEXT)</td>
                <td>@Html.DisplayFor(modelItem => item.MATLTEXT)</td>
                <td>@Html.DisplayFor(modelItem => item.LANCODE)</td>
                <td>@Html.DisplayFor(modelItem => item.MATDOCUNTIL)</td>
                <td>@Html.DisplayFor(modelItem => item.SUPPLYTYPE)</td>
                <td>@Html.DisplayFor(modelItem => item.ISBOM)</td>
                <td>@Html.DisplayFor(modelItem => item.ISROUTE)</td>
                <td class="text-center">
                    <a class="btn btn-primary btn-sm mx-1 shadow-sm" asp-action="Edit" asp-route-id="@item.MATDOCNUM">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a class="btn btn-warning btn-sm mx-1 shadow-sm" asp-action="Details" asp-route-id="@item.MATDOCNUM">
                        <i class="fas fa-info-circle"></i> Detay
                    </a>
                    <a class="btn btn-danger btn-sm mx-1 shadow-sm" asp-action="Delete" asp-route-id="@item.MATDOCNUM">
                        <i class="fas fa-trash-alt"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        transition: background-color 0.3s ease;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
