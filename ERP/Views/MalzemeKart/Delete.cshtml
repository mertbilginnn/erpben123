@model ERP.Models.Veri.Malzeme.BSMGRNNMMATHEAD

@{
    ViewData["Title"] = "Malzeme Kartı Sil";
}

<h1 class="text-center text-danger mb-4">Malzeme Kartı Sil</h1>

<h3 class="text-center">Bu kaydı silmek istediğinizden emin misiniz?</h3>
<div class="card shadow-lg mb-4">
    <div class="card-header bg-danger text-white">
        <h5>Silinecek Kayıt Bilgileri</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4 fw-bold text-secondary">Geçerlilik Başlangıç:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MATDOCFROM)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Geçerlilik Bitiş:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MATDOCUNTIL)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Tedarik Tipi:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.SUPPLYTYPE)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Net Ağırlık:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NETWEIGHT)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Brüt Ağırlık:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.BRUTWEIGHT)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Silindi mi?</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ISDELETED)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Pasif mi?</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ISPASSIVE)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Firma Kodu:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FCOMCODE.COMCODE)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Malzeme Tipi:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FMATDOCTYPE.DOCTYPE)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Ürün Ağacı Kodu:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.BOMDOCNUM)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Dil Kodu:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FLANCODE.LANCODE)</dd>
        </dl>
    </div>
</div>

<div class="text-center mb-4">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MATDOCNUM" />
        <button type="submit" class="btn btn-danger shadow-sm me-2">
            <i class="fas fa-trash-alt"></i> Sil
        </button>
        <a asp-action="Index" class="btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left"></i> Listeye Geri Dön
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 15px;
        border: 1px solid #dee2e6;
    }

    .btn:hover {
        transform: scale(1.05);
        transition: 0.2s ease-in-out;
    }

    dt {
        font-weight: bold;
    }

    dd {
        padding-bottom: 10px;
        border-bottom: 1px solid #ddd;
    }

        dd:last-child {
            border-bottom: none;
        }

    h1 {
        font-size: 28px;
        font-weight: bold;
    }

    form button:hover {
        background-color: #dc3545;
        color: white;
    }
</style>
