@model ERP.Models.Kontrol.RotaBilgi.BSMGRNNMOPR001

@{
    ViewData["Title"] = "Operasyon Detayları";
}

<h1 class="text-primary text-center mb-4">Operasyon Detayları</h1>

<div class="row justify-content-center">
    <div class="col-md-8 shadow-lg p-4 rounded bg-light">
        <dl class="row">
            <!-- Operasyon Açıklaması -->
            <dt class="col-sm-4 fw-bold text-secondary">Operasyon Tipi:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DOCTYPE)</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Operasyon Açıklaması:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DOCTYPETEXT)</dd>

            <!-- Pasif Mi? -->
            <dt class="col-sm-4 fw-bold text-secondary">Pasif mi?</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ISPASSIVE)</dd>


            <!-- Firma Kodu -->
            <dt class="col-sm-4 fw-bold text-secondary">Firma Kodu:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FCOMCODE.COMCODE)</dd>
        </dl>
    </div>
</div>

<!-- Butonlar -->
<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.DOCTYPE" class="btn btn-primary btn-lg shadow-sm me-2">
        <i class="fas fa-edit"></i> Düzenle
    </a>
    <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
        <i class="fas fa-arrow-left"></i> Listeye Geri Dön
    </a>
</div>

<!-- Stil Tasarımları -->
<style>
    input:focus, select:focus {
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        transition: box-shadow 0.3s ease-in-out;
    }

    button:hover, a:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease-in-out;
    }

    h1 {
        font-size: 28px;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
    }

    dt {
        font-weight: bold;
    }

    dd {
        padding-bottom: 10px;
        border-bottom: 1px solid #ddd;
    }

        dd:last-child {
            border-bottom: none;
        }
</style>
