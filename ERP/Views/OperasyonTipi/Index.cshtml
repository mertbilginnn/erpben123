@model IEnumerable<ERP.Models.Kontrol.RotaBilgi.BSMGRNNMOPR001>

@{
    ViewData["Title"] = "Operasyon Bilgileri";
}

<h1 class="text-primary text-center mb-4">Operasyon Bilgileri</h1>

<!-- Yeni Operasyon Ekle Butonu -->
<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-success btn-lg shadow-sm" asp-action="Create">
        <i class="fas fa-plus-circle"></i> Yeni Operasyon Oluştur
    </a>
</div>

<!-- Tablo Başlıkları -->
<table class="table table-striped table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Operasyon Tipi</th>
            <th>Operasyon Açıklaması</th>
            <th>Pasif mi?</th>
            <th>Firma Kodu</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        <!-- Satırlar -->
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DOCTYPE)</td>
                <td>@Html.DisplayFor(modelItem => item.DOCTYPETEXT)</td>
                <td>@Html.DisplayFor(modelItem => item.ISPASSIVE)</td>
                <td>@Html.DisplayFor(modelItem => item.FCOMCODE.COMCODE)</td>
                <td class="text-center">
                    <!-- İşlem Butonları -->
                    <a class="btn btn-primary btn-sm mx-1 shadow-sm" asp-action="Edit" asp-route-id="@item.DOCTYPE">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a class="btn btn-warning btn-sm mx-1 shadow-sm" asp-action="Details" asp-route-id="@item.DOCTYPE">
                        <i class="fas fa-info-circle"></i> Detay
                    </a>
                    <a class="btn btn-danger btn-sm mx-1 shadow-sm" asp-action="Delete" asp-route-id="@item.DOCTYPE">
                        <i class="fas fa-trash-alt"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- CSS Stilleri -->
<style>
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        transition: background-color 0.3s ease;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    h1 {
        font-size: 28px;
        font-weight: bold;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
    }
</style>
