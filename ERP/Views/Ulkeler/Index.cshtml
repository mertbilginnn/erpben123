@model IEnumerable<ERP.Models.Kontrol.Genel.BSMGRNNMGEN003>

@{
    ViewData["Title"] = "Ülkeler";
}

<h1 class="text-primary text-center mb-4">Ülkeler</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-success btn-lg shadow-sm" asp-action="Create">
        <i class="fas fa-plus-circle"></i> Yeni Ülke Oluştur
    </a>
</div>

<table class="table table-striped table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Ülke Kodu</th>
            <th>Ülke İsmi</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.COUNTRYCODE)</td>
                <td>@Html.DisplayFor(modelItem => item.COUNTRYNAME)</td>
                <td class="text-center">
                    <a class="btn btn-primary btn-sm mx-1 shadow-sm" asp-action="Edit" asp-route-id="@item.COUNTRYCODE">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a class="btn btn-warning btn-sm mx-1 shadow-sm" asp-action="Details" asp-route-id="@item.COUNTRYCODE">
                        <i class="fas fa-info-circle"></i> Detay
                    </a>
                    <a class="btn btn-danger btn-sm mx-1 shadow-sm" asp-action="Delete" asp-route-id="@item.COUNTRYCODE">
                        <i class="fas fa-trash-alt"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        transition: background-color 0.3s ease;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
