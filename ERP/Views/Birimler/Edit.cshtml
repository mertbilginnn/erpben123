@model ERP.Models.Kontrol.Genel.BSMGRNNMGEN005

@{
    ViewData["Title"] = "Birimi Düzenle";
}

<h1 class="text-primary text-center mb-4">Birimi Düzenle</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6 shadow-lg p-4 rounded bg-light">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="UNITCODE" />
            <div class="form-group mb-3">
                <label asp-for="UNITCODE" class="form-label">Birim Kodu</label>
                <input asp-for="UNITCODE" class="form-control" readonly />
                <span asp-validation-for="UNITCODE" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UNITTEXT" class="form-label">Birim Adı</label>
                <input asp-for="UNITTEXT" class="form-control" placeholder="Birim Adını Girin" />
                <span asp-validation-for="UNITTEXT" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ISMAINUNIT" class="form-label">Ana Ağırlık Birimi</label>
                <input asp-for="ISMAINUNIT" class="form-control" placeholder="Ana Ağırlık Birimini Girin" />
                <span asp-validation-for="ISMAINUNIT" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MAINUNITCODE" class="form-label">Ana Birim Kodu</label>
                <input asp-for="MAINUNITCODE" class="form-control" placeholder="Ana Birim Kodunu Girin" />
                <span asp-validation-for="MAINUNITCODE" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="COMCODE" class="form-label">Firma Kodu</label>
                <select asp-for="COMCODE" class="form-select" asp-items="ViewBag.COMCODE"></select>
                <span asp-validation-for="COMCODE" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-success btn-lg shadow-sm">
                    <i class="fas fa-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    input:focus, select:focus {
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        transition: box-shadow 0.3s ease-in-out;
    }

    button:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease-in-out;
    }
</style>
