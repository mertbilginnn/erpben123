@model IEnumerable<ERP.Models.Veri.Maliyet.BSMGRNNMCCMHEAD>

@{
    ViewData["Title"] = "Maliyet Kartları";
}

<h1 class="text-primary text-center mb-4">Maliyet Merkezleri</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-success btn-lg shadow-sm" asp-action="Create">
        <i class="fas fa-plus-circle"></i> Yeni Maliyet Merkezi Oluştur
    </a>
</div>

<table class="table table-striped table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Firma Kodu</th>
            <th>Maliyet Merkezi Kodu</th>
            <th>Maliyet Merkezi Tipi</th>
            <th>Geçerlilik Başlangıç</th>
            <th>Geçerlilik Bitiş</th>
            <th>Ana Maliyet Merkezi Kodu</th>
            <th>Ana Maliyet Merkezi Tipi</th>
            <th>Silindi mi?</th>
            <th>Pasif mi?</th>
            <th>Dil Kodu</th>
            <th>Tedarik Tipi</th>
            <th>Maliyet Merkezi Kısa Açıklaması</th>
            <th>Maliyet Merkezi Uzun Açıklaması</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.COMCODE)</td>
                <td>@Html.DisplayFor(modelItem => item.CCMDOCNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.CCMDOCTYPE)</td>
                <td>@Html.DisplayFor(modelItem => item.CCMDOCFROM)</td>
                <td>@Html.DisplayFor(modelItem => item.CCMDOCFROM)</td>
                <td>@Html.DisplayFor(modelItem => item.CCMDOCUNTIL)</td>
                <td>@Html.DisplayFor(modelItem => item.MAINCCMDOCNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.MAINCCMDOCTYPE)</td>
                <td>@Html.DisplayFor(modelItem => item.ISDELETED)</td>
                <td>@Html.DisplayFor(modelItem => item.ISPASSIVE)</td>
                <td>@Html.DisplayFor(modelItem => item.LANCODE)</td>
                <td>@Html.DisplayFor(modelItem => item.CCMSTEXT)</td>
                <td>@Html.DisplayFor(modelItem => item.CCMLTEXT)</td>
                <td class="text-center">
                    <a class="btn btn-primary btn-sm mx-1 shadow-sm" asp-action="Edit" asp-route-id="@item.CCMDOCNUM">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a class="btn btn-warning btn-sm mx-1 shadow-sm" asp-action="Details" asp-route-id="@item.CCMDOCNUM">
                        <i class="fas fa-info-circle"></i> Detay
                    </a>
                    <a class="btn btn-danger btn-sm mx-1 shadow-sm" asp-action="Delete" asp-route-id="@item.CCMDOCNUM">
                        <i class="fas fa-trash-alt"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        transition: background-color 0.3s ease;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
