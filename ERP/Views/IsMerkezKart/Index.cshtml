@model IEnumerable<ERP.Models.Veri.IsMerkez.BSMGRNNMWCMHEAD>

@{
    ViewData["Title"] = "İş Merkezleri";
}

<h1 class="text-primary text-center mb-4">İş Merkezleri </h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-success btn-lg shadow-sm" asp-action="Create">
        <i class="fas fa-plus-circle"></i> Yeni İş Merkezi Oluştur
    </a>
</div>

<table class="table table-striped table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>İş Merkezi No</th>
            <th>İş Merkezi Tipi</th>
            <th>Geçerlilik Başlangıç</th>
            <th>Geçerlilik Bitiş</th>
            <th>Ana İş Merkezi Kodu</th>
            <th>Ana İş Merkezi Tipi</th>
            <th>Çalışma Süresi</th>
            <th>İş Merkezi Silindi mi?</th>
            <th>Pasif mi?</th>
            <th>İş Merkezi Kısa Açıklaması</th>
            <th>İş Merkezi Uzun Açıklaması</th>
            <th>Operasyon Kodu</th>
            <th>Firma Kodu</th>
            <th>Maliyet Merkezi Kodu</th>
            <th>Maliyet Merkezi Tipi</th>
            <th>Dil Kodu</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.WCMDOCNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.WCMDOCTYPE)</td>
                <td>@Html.DisplayFor(modelItem => item.WCMDOCFROM)</td>
                <td>@Html.DisplayFor(modelItem => item.WCMDOCUNTIL)</td>
                <td>@Html.DisplayFor(modelItem => item.MAINWCMDOCTYPE)</td>
                <td>@Html.DisplayFor(modelItem => item.MAINWCMDOCNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.WORKTIME)</td>
                <td>@Html.DisplayFor(modelItem => item.ISDELETED)</td>
                <td>@Html.DisplayFor(modelItem => item.ISPASSIVE)</td>
                <td>@Html.DisplayFor(modelItem => item.WCMSTEXT)</td>
                <td>@Html.DisplayFor(modelItem => item.WCMLTWXT)</td>
                <td>@Html.DisplayFor(modelItem => item.OPRDOCTYPE)</td>
                <td>@Html.DisplayFor(modelItem => item.FCOMCODE.COMCODE)</td>
                <td>@Html.DisplayFor(modelItem => item.CCMDOCNUM)</td>
                <td>@Html.DisplayFor(modelItem => item.CCMDOCTYPE)</td>
                <td>@Html.DisplayFor(modelItem => item.FLANCODE.LANCODE)</td>
                <td class="text-center">
                    <a class="btn btn-primary btn-sm mx-1 shadow-sm" asp-action="Edit" asp-route-id="@item.WCMDOCNUM">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a class="btn btn-warning btn-sm mx-1 shadow-sm" asp-action="Details" asp-route-id="@item.WCMDOCNUM">
                        <i class="fas fa-info-circle"></i> Detay
                    </a>
                    <a class="btn btn-danger btn-sm mx-1 shadow-sm" asp-action="Delete" asp-route-id="@item.WCMDOCNUM">
                        <i class="fas fa-trash-alt"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        transition: background-color 0.3s ease;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
