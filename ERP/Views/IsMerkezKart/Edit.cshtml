@model ERP.Models.Veri.IsMerkez.BSMGRNNMWCMHEAD

@{
    ViewData["Title"] = "Düzenle";
}

<h1 class="text-center text-primary mb-4">İş Merkezi Düzenle</h1>

<div class="card shadow-lg mb-4">
    <div class="card-header bg-primary text-white">
        <h5>İş Merkezi Bilgileri</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="COMCODE" class="control-label">Firma Kodu</label>
                        <select asp-for="COMCODE" class="form-control" asp-items="ViewBag.COMCODE"></select>
                        <span asp-validation-for="COMCODE" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WCMDOCTYPE" class="control-label">İş Merkezi Tipi</label>
                        <select asp-for="WCMDOCTYPE" class="form-control" asp-items="ViewBag.WCMDOCTYPE"></select>
                        <span asp-validation-for="WCMDOCTYPE" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WCMDOCFROM" class="control-label">Başlangıç Tarihi</label>
                        <input asp-for="WCMDOCFROM" class="form-control" />
                        <span asp-validation-for="WCMDOCFROM" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WCMDOCUNTIL" class="control-label">Bitiş Tarihi</label>
                        <input asp-for="WCMDOCUNTIL" class="form-control" />
                        <span asp-validation-for="WCMDOCUNTIL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MAINWCMDOCTYPE" class="control-label">Ana İş Merkezi Tipi</label>
                        <input asp-for="MAINWCMDOCTYPE" class="form-control" />
                        <span asp-validation-for="MAINWCMDOCTYPE" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MAINWCMDOCNUM" class="control-label">Ana İş Merkezi Numarası</label>
                        <input asp-for="MAINWCMDOCNUM" class="form-control" />
                        <span asp-validation-for="MAINWCMDOCNUM" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CCMDOCNUM" class="control-label">Maliyet Merkezi Numarası</label>
                        <select asp-for="CCMDOCNUM" class="form-control" asp-items="ViewBag.CCMDOCNUM"></select>
                        <span asp-validation-for="CCMDOCNUM" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CCMDOCTYPE" class="control-label">Maliyet Merkezi Tipi</label>
                        <select asp-for="CCMDOCTYPE" class="form-control" asp-items="ViewBag.CCMDOCTYPE"></select>
                        <span asp-validation-for="CCMDOCTYPE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="WORKTIME" class="control-label">Çalışma Süresi</label>
                        <input asp-for="WORKTIME" class="form-control" />
                        <span asp-validation-for="WORKTIME" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ISDELETED" class="control-label">Silindi mi?</label>
                        <input asp-for="ISDELETED" class="form-control" />
                        <span asp-validation-for="ISDELETED" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ISPASSIVE" class="control-label">Pasif mi?</label>
                        <input asp-for="ISPASSIVE" class="form-control" />
                        <span asp-validation-for="ISPASSIVE" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WCMSTEXT" class="control-label">Kısa Açıklama</label>
                        <input asp-for="WCMSTEXT" class="form-control" />
                        <span asp-validation-for="WCMSTEXT" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WCMLTWXT" class="control-label">Uzun Açıklama</label>
                        <input asp-for="WCMLTWXT" class="form-control" />
                        <span asp-validation-for="WCMLTWXT" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LANCODE" class="control-label">Dil Kodu</label>
                        <select asp-for="LANCODE" class="form-control" asp-items="ViewBag.LANCODE"></select>
                        <span asp-validation-for="LANCODE" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OPRDOCTYPE" class="control-label">Operasyon Tipi</label>
                        <input asp-for="OPRDOCTYPE" class="form-control" />
                        <span asp-validation-for="OPRDOCTYPE" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group text-center mt-4">
                <input type="submit" value="Kaydet" class="btn btn-primary px-5" />
                <a asp-action="Index" class="btn btn-secondary px-5">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus {
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
    }

    .btn:hover {
        transform: scale(1.05);
        transition: 0.3s ease-in-out;
    }
</style>
