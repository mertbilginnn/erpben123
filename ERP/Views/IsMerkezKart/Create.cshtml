@model ERP.Models.Veri.IsMerkez.BSMGRNNMWCMHEAD

@{
    ViewData["Title"] = "Yeni İş Merkezi Oluştur";
}

<h1 class="text-primary text-center mb-4">Yeni İş Merkezi Oluştur</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6 shadow-lg p-4 rounded bg-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Firma Kodu -->
            <div class="form-group">
                <label asp-for="COMCODE" class="control-label">Firma Kodu</label>
                <select asp-for="COMCODE" class="form-control" asp-items="ViewBag.COMCODE"></select>
            </div>

            <!-- İş Merkezi Belge No -->
            <div class="form-group">
                <label asp-for="WCMDOCNUM" class="control-label">İş Merkezi No</label>
                <input asp-for="WCMDOCNUM" class="form-control" />
                <span asp-validation-for="WCMDOCNUM" class="text-danger"></span>
            </div>

            <!-- İş Merkezi Tipi -->
            <div class="form-group">
                <label asp-for="WCMDOCTYPE" class="control-label">İş Merkezi Tipi</label>
                <select asp-for="WCMDOCTYPE" class="form-control" asp-items="ViewBag.WCMDOCTYPE"></select>
            </div>

            <!-- Geçerlilik Başlangıç -->
            <div class="form-group">
                <label asp-for="WCMDOCFROM" class="control-label">Geçerlilik Başlangıç</label>
                <input asp-for="WCMDOCFROM" class="form-control" />
                <span asp-validation-for="WCMDOCFROM" class="text-danger"></span>
            </div>

            <!-- Geçerlilik Bitiş -->
            <div class="form-group">
                <label asp-for="WCMDOCUNTIL" class="control-label">Geçerlilik Bitiş</label>
                <input asp-for="WCMDOCUNTIL" class="form-control" />
                <span asp-validation-for="WCMDOCUNTIL" class="text-danger"></span>
            </div>

            <!-- Ana İş Merkezi Tipi -->
            <div class="form-group">
                <label asp-for="MAINWCMDOCTYPE" class="control-label">Ana İş Merkezi Tipi</label>
                <input asp-for="MAINWCMDOCTYPE" class="form-control" />
                <span asp-validation-for="MAINWCMDOCTYPE" class="text-danger"></span>
            </div>

            <!-- Ana İş Merkezi No -->
            <div class="form-group">
                <label asp-for="MAINWCMDOCNUM" class="control-label">Ana İş Merkezi No</label>
                <input asp-for="MAINWCMDOCNUM" class="form-control" />
                <span asp-validation-for="MAINWCMDOCNUM" class="text-danger"></span>
            </div>

            <!-- Çalışma Süresi -->
            <div class="form-group">
                <label asp-for="WORKTIME" class="control-label">Çalışma Süresi</label>
                <input asp-for="WORKTIME" class="form-control" />
                <span asp-validation-for="WORKTIME" class="text-danger"></span>
            </div>

            <!-- Pasif mi? -->
            <div class="form-group">
                <label asp-for="ISPASSIVE" class="control-label">Pasif mi?</label>
                <input asp-for="ISPASSIVE" class="form-control" />
                <span asp-validation-for="ISPASSIVE" class="text-danger"></span>
            </div>

            <!-- Kısa Açıklama -->
            <div class="form-group">
                <label asp-for="WCMSTEXT" class="control-label">Kısa Açıklama</label>
                <input asp-for="WCMSTEXT" class="form-control" />
                <span asp-validation-for="WCMSTEXT" class="text-danger"></span>
            </div>

            <!-- Uzun Açıklama -->
            <div class="form-group">
                <label asp-for="WCMLTWXT" class="control-label">Uzun Açıklama</label>
                <input asp-for="WCMLTWXT" class="form-control" />
                <span asp-validation-for="WCMLTWXT" class="text-danger"></span>
            </div>

            <!-- Dil Kodu -->
            <div class="form-group">
                <label asp-for="LANCODE" class="control-label">Dil Kodu</label>
                <select asp-for="LANCODE" class="form-control" asp-items="ViewBag.LANCODE"></select>
            </div>

            <!-- Operasyon Kodu -->
            <div class="form-group">
                <label asp-for="OPRDOCTYPE" class="control-label">Operasyon Kodu</label>
                <input asp-for="OPRDOCTYPE" class="form-control" />
                <span asp-validation-for="OPRDOCTYPE" class="text-danger"></span>
            </div>

            <!-- Butonlar -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary shadow-sm me-2">
                    <i class="fas fa-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary shadow-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Stil Tasarımları -->
<style>
    input:focus, select:focus {
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        transition: box-shadow 0.3s ease-in-out;
    }

    button:hover, a:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease-in-out;
    }

    h1 {
        font-size: 28px;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
    }
</style>
