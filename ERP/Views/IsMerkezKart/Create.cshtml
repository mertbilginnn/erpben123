@model ERP.Models.Veri.IsMerkez.BSMGRNNMWCMHEAD

@{
    ViewData["Title"] = "Yeni İş Merkezi Oluştur";
}

<h1 class="text-primary text-center mb-4">Yeni İş Merkezi Oluştur</h1>

<div class="row justify-content-center">
    <div class="col-md-8 shadow-lg p-4 rounded bg-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- 1. Firma Kodu -->
            <div class="form-group mb-3">
                <label asp-for="COMCODE" class="control-label">Firma Kodu</label>
                <select asp-for="COMCODE" class="form-control shadow-sm" asp-items="ViewBag.COMCODE"></select>
            </div>

            <!-- 2. İş Merkezi No -->
            <div class="form-group mb-3">
                <label asp-for="WCMDOCNUM" class="control-label">İş Merkezi No</label>
                <input asp-for="WCMDOCNUM" class="form-control shadow-sm" placeholder="İş Merkezi No Giriniz" />
                <span asp-validation-for="WCMDOCNUM" class="text-danger"></span>
            </div>

            <!-- 3. İş Merkezi Tipi -->
            <div class="form-group mb-3">
                <label asp-for="WCMDOCTYPE" class="control-label">İş Merkezi Tipi</label>
                <select asp-for="WCMDOCTYPE" class="form-control shadow-sm" asp-items="ViewBag.WCMDOCTYPE"></select>
            </div>

            <!-- 4. Geçerlilik Başlangıç -->
            <div class="form-group mb-3">
                <label asp-for="WCMDOCFROM" class="control-label">Geçerlilik Başlangıç</label>
                <input asp-for="WCMDOCFROM" class="form-control shadow-sm" placeholder="Başlangıç tarihi giriniz" />
                <span asp-validation-for="WCMDOCFROM" class="text-danger"></span>
            </div>

            <!-- 5. Geçerlilik Bitiş -->
            <div class="form-group mb-3">
                <label asp-for="WCMDOCUNTIL" class="control-label">Geçerlilik Bitiş</label>
                <input asp-for="WCMDOCUNTIL" class="form-control shadow-sm" placeholder="Bitiş tarihi giriniz" />
                <span asp-validation-for="WCMDOCUNTIL" class="text-danger"></span>
            </div>

            <!-- 6. Ana İş Merkezi Tipi -->
            <div class="form-group mb-3">
                <label asp-for="MAINWCMDOCTYPE" class="control-label">Ana İş Merkezi Tipi</label>
                <input asp-for="MAINWCMDOCTYPE" class="form-control shadow-sm" placeholder="Ana İş Merkezi Tipi Giriniz" />
                <span asp-validation-for="MAINWCMDOCTYPE" class="text-danger"></span>
            </div>

            <!-- 7. Ana İş Merkezi Kodu -->
            <div class="form-group mb-3">
                <label asp-for="MAINWCMDOCNUM" class="control-label">Ana İş Merkezi Kodu</label>
                <input asp-for="MAINWCMDOCNUM" class="form-control shadow-sm" placeholder="Ana İş Merkezi Kodu Giriniz" />
                <span asp-validation-for="MAINWCMDOCNUM" class="text-danger"></span>
            </div>

            <!-- 8. Maliyet Merkezi Kodu -->
            <div class="form-group mb-3">
                <label asp-for="CCMDOCNUM" class="control-label">Maliyet Merkezi Kodu</label>
                <input asp-for="CCMDOCNUM" class="form-control shadow-sm" placeholder="Maliyet Merkezi Kodu Giriniz" />
                <span asp-validation-for="CCMDOCNUM" class="text-danger"></span>
            </div>

            <!-- 9. Maliyet Merkezi Tipi -->
            <div class="form-group mb-3">
                <label asp-for="CCMDOCTYPE" class="control-label">Maliyet Merkezi Tipi</label>
                <select asp-for="CCMDOCTYPE" class="form-control shadow-sm" asp-items="ViewBag.CCMDOCTYPE"></select>
            </div>

            <!-- 10. Çalışma Süresi -->
            <div class="form-group mb-3">
                <label asp-for="WORKTIME" class="control-label">Çalışma Süresi</label>
                <input asp-for="WORKTIME" class="form-control shadow-sm" placeholder="Çalışma Süresi Giriniz" />
                <span asp-validation-for="WORKTIME" class="text-danger"></span>
            </div>

            <!-- 11. Silindi mi? -->
            <div class="form-group mb-3">
                <label asp-for="ISDELETED" class="control-label">Silindi mi?</label>
                <input asp-for="ISDELETED" class="form-control shadow-sm" />
                <span asp-validation-for="ISDELETED" class="text-danger"></span>
            </div>

            <!-- 12. Pasif mi? -->
            <div class="form-group mb-3">
                <label asp-for="ISPASSIVE" class="control-label">Pasif mi?</label>
                <input asp-for="ISPASSIVE" class="form-control shadow-sm" />
                <span asp-validation-for="ISPASSIVE" class="text-danger"></span>
            </div>

            <!-- 13. İş Merkezi Kısa Açıklaması -->
            <div class="form-group mb-3">
                <label asp-for="WCMSTEXT" class="control-label">Kısa Açıklama</label>
                <input asp-for="WCMSTEXT" class="form-control shadow-sm" placeholder="Kısa Açıklama Giriniz" />
                <span asp-validation-for="WCMSTEXT" class="text-danger"></span>
            </div>

            <!-- 14. İş Merkezi Uzun Açıklaması -->
            <div class="form-group mb-3">
                <label asp-for="WCMLTWXT" class="control-label">Uzun Açıklama</label>
                <input asp-for="WCMLTWXT" class="form-control shadow-sm" placeholder="Uzun Açıklama Giriniz" />
                <span asp-validation-for="WCMLTWXT" class="text-danger"></span>
            </div>

            <!-- 15. Dil Kodu -->
            <div class="form-group mb-3">
                <label asp-for="LANCODE" class="control-label">Dil Kodu</label>
                <select asp-for="LANCODE" class="form-control shadow-sm" asp-items="ViewBag.LANCODE"></select>
            </div>

            <!-- 16. Operasyon Kodu -->
            <div class="form-group mb-3">
                <label asp-for="OPRDOCTYPE" class="control-label">Operasyon Kodu</label>
                <input asp-for="OPRDOCTYPE" class="form-control shadow-sm" placeholder="Operasyon Kodu Giriniz" />
                <span asp-validation-for="OPRDOCTYPE" class="text-danger"></span>
            </div>

            <!-- Butonlar -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg shadow-sm me-2">
                    <i class="fas fa-save"></i> Oluştur
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>
