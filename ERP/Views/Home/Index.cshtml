<!-- KART TASARIMI (Özel stiller) -->
<style>
    body {
        background: #f7f9fc; /* Arkaplanı çok hafif gri yapalım */
    }

    .card.custom-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: linear-gradient(to bottom right, #ffffff, #e8edf3);
        /* Düz beyaz yerine hafif bir degrade */
    }

        .card.custom-card:hover {
            transform: translateY(-3px) scale(1.03);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }

    .card-header.custom-card-header {
        background: linear-gradient(to right, #004aad, #00a0e3);
        color: #fff;
        font-weight: 600;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .card-header.custom-card-header i {
            margin-right: 8px;
        }

    .card-body.custom-card-body {
        background-color: transparent;
        /* Arka planı transparent bırakarak degradeye uyum sağlayabiliriz */
        color: #333;
    }

        .card-body.custom-card-body p {
            font-size: 0.95rem;
        }

    .btn-custom {
        background-color: #00a0e3;
        border-color: #00a0e3;
    }

        .btn-custom:hover {
            background-color: #0078a3;
            border-color: #0078a3;
        }
</style>


