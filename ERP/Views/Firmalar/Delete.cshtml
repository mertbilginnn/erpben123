@model ERP.Models.Kontrol.Genel.BSMGRNNMGEN001
@{
    ViewData["Title"] = "Firma Sil";
}

<h1 class="text-danger text-center mb-4">Firma Sil</h1>

<p class="text-center">Bu firmayı silmek istediğinizden emin misiniz?</p>

<div class="card shadow-lg">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Firma Bilgileri</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <tr>
                <th class="bg-light">Firma Kodu</th>
                <td>@Model.COMCODE</td>
            </tr>
            <tr>
                <th class="bg-light">Firma Adı</th>
                <td>@Model.COMTEXT</td>
            </tr>
            <tr>
                <th class="bg-light">Adres 1</th>
                <td>@Model.ADRESS1</td>
            </tr>
            <tr>
                <th class="bg-light">Adres 2</th>
                <td>@Model.ADRESS2</td>
            </tr>
            <tr>
                <th class="bg-light">Şehir Kodu</th>
                <td>@Model.CITYCODE</td>
            </tr>
            <tr>
                <th class="bg-light">Ülke Kodu</th>
                <td>@Model.COUNTRYCODE</td>
            </tr>
        </table>
        <div class="mt-4 text-center">
            <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.COMCODE">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                    <i class="fas fa-trash-alt"></i> Sil
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm ms-3">
                    <i class="fas fa-arrow-left"></i> Listeye Geri Dön
                </a>
            </form>
        </div>
    </div>
</div>

<style>
    table.table-bordered th {
        text-align: left;
        font-weight: 600;
    }

    table.table-bordered td {
        font-weight: 500;
    }

    button:hover, a:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease-in-out;
    }
</style>
