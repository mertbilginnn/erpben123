@model ERP.Models.Kontrol.Genel.BSMGRNNMGEN001

@{
    ViewData["Title"] = "Firma Detayları";
}

<h1 class="text-primary text-center mb-4">Firma Detayları</h1>

<div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Firma Bilgileri</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <tr>
                <th class="bg-light">Firma Kodu</th>
                <td>@Model.COMCODE</td>
            </tr>
            <tr>
                <th class="bg-light">Firma Adı</th>
                <td>@Model.COMTEXT</td>
            </tr>
            <tr>
                <th class="bg-light">Adres 1</th>
                <td>@Model.ADRESS1</td>
            </tr>
            <tr>
                <th class="bg-light">Adres 2</th>
                <td>@Model.ADRESS2</td>
            </tr>
            <tr>
                <th class="bg-light">Şehir Kodu</th>
                <td>@Model.CITY?.CITYCODE</td>
            </tr>
            <tr>
                <th class="bg-light">Ülke Kodu</th>
                <td>@Model.COUNTRY?.COUNTRYCODE</td>
            </tr>
        </table>
        <div class="mt-4 text-center">
            <a asp-action="Edit" asp-route-id="@Model.COMCODE" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-edit"></i> Düzenle
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                <i class="fas fa-arrow-left"></i> Listeye Geri Dön
            </a>
        </div>
    </div>
</div>

<style>
    table.table-bordered th {
        text-align: left;
        font-weight: 600;
    }

    table.table-bordered td {
        font-weight: 500;
    }

    a:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease-in-out;
    }
</style>
