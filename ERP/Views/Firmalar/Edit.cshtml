@model ERP.Models.Kontrol.Genel.BSMGRNNMGEN001
@{
    ViewData["Title"] = "Firma Düzenle";
}

<h1 class="text-primary text-center mb-4">Firma Düzenle</h1>

<div class="shadow-lg p-4 rounded bg-light">
    <form method="post">
        <input type="hidden" asp-for="COMCODE" />
        <div class="form-group mb-3">
            <label class="form-label">Firma Kodu</label>
            <input asp-for="COMCODE" class="form-control" readonly />
            <span asp-validation-for="COMCODE" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Firma Adı</label>
            <input asp-for="COMTEXT" class="form-control" placeholder="Firma Adını Girin" />
            <span asp-validation-for="COMTEXT" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Adres 1</label>
            <input asp-for="ADRESS1" class="form-control" placeholder="Adres 1 Girin" />
            <span asp-validation-for="ADRESS1" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Adres 2</label>
            <input asp-for="ADRESS2" class="form-control" placeholder="Adres 2 Girin" />
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Şehir Kodu</label>
            <select asp-for="CITYCODE" class="form-select" asp-items="ViewBag.CITYCODE"></select>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Ülke Kodu</label>
            <select asp-for="COUNTRYCODE" class="form-select" asp-items="ViewBag.COUNTRYCODE"></select>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-success btn-lg shadow-sm">
                <i class="fas fa-save"></i> Kaydet
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                <i class="fas fa-arrow-left"></i> Listeye Geri Dön
            </a>
        </div>
    </form>
</div>

<style>
    input:focus, select:focus {
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        transition: box-shadow 0.3s ease-in-out;
    }

    button:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease-in-out;
    }
</style>
